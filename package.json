{
  "name": "route-graphics",
  "version": "0.0.5",
  "description": "A 2D graphics rendering interface that takes JSON input and renders pixels using PixiJS",
  "main": "dist/RouteGraphics.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuusoft-org/route-graphics.git"
  },
  "keywords": [
    "2d",
    "graphics",
    "pixi",
    "rendering",
    "canvas",
    "json"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "lint": "bunx prettier --check src",
    "lint:fix": "bunx prettier --check --write src",
    "build": "bun run esbuild.js",
    "vt:generate": "bun run esbuild.js && rtgl vt generate --skip-screenshots",
    "vt:report": "bun run esbuild.js && rtgl vt generate && rtgl vt report",
    "test": "vitest run",
    "test:watch": "vitest",
    "serve": "bunx serve -p 3005 .rettangoli/vt/_site"
  },
  "dependencies": {
    "@pixi/unsafe-eval": "^7.4.3",
    "pixi.js": "^8.7.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "canvas": "^3.2.0",
    "esbuild": "^0.25.6",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.1",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.44.0",
    "pngjs": "^7.0.0",
    "puty": "^0.0.5-rc1"
  }
}
